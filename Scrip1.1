#!/bin/bash
echo '¿Cuantas extensiones de archivo desea buscar?: '
read veces
CHECK=*.txt
for((i=1; i<=veces; i++))
do
	echo -e 'Introduzca la extensión a buscar: \n'
	read extension
	if [[ "$extension" == "$CHECK" ]]; then
		echo ....		
	else
		mkdir Extension$i 
		find ~ -name $extension -exec cp {} ./Extension$i \;
	fi
done
